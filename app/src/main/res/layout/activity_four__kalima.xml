<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Four_Kalima">

    <TextView
        android:id="@+id/Four_kalima"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="45dp"
        android:fontFamily="@font/noto_serif"
        android:gravity="center"
        android:text="Kalima/কালিমা"
        android:textColor="#111111"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/taiyeba"
        android:layout_width="280dp"
        android:layout_height="55dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="#011F3F"
        android:fontFamily="@font/artifika"
        android:text="Taiyeba/তাইয়্যেবা"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="@+id/Four_kalima"
        app:layout_constraintStart_toStartOf="@+id/Four_kalima"
        app:layout_constraintTop_toBottomOf="@+id/Four_kalima" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/shahadat"
        android:layout_width="280dp"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#011F3F"
        android:fontFamily="@font/artifika"
        android:text="Shahadat/শাহাদাত"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="@+id/taiyeba"
        app:layout_constraintStart_toStartOf="@+id/taiyeba"
        app:layout_constraintTop_toBottomOf="@+id/taiyeba" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/tauhid"
        android:layout_width="280dp"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#011F3F"
        android:fontFamily="@font/artifika"
        android:text="Tawheed/তাওহীদ"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="@+id/shahadat"
        app:layout_constraintStart_toStartOf="@+id/shahadat"
        app:layout_constraintTop_toBottomOf="@+id/shahadat" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/tamjid"
        android:layout_width="280dp"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#011F3F"
        android:fontFamily="@font/artifika"
        android:text="Tamjid/তামজীদ"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="@+id/tauhid"
        app:layout_constraintStart_toStartOf="@+id/tauhid"
        app:layout_constraintTop_toBottomOf="@+id/tauhid" />

</androidx.constraintlayout.widget.ConstraintLayout>