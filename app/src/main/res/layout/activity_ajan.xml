<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ajan">

    <TextView
        android:id="@+id/ajan"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginTop="45dp"
        android:fontFamily="@font/noto_serif"
        android:gravity="center"
        android:text="Ajan/আযান"
        android:textColor="#111111"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/ajan_ans"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_marginTop="180dp"
        android:backgroundTint="#011F3F"
        android:fontFamily="@font/artifika"
        android:text="Ans of Ajan/আযানের উত্তর"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="@+id/ajan"
        app:layout_constraintStart_toStartOf="@+id/ajan"
        app:layout_constraintTop_toBottomOf="@+id/ajan" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/ajan_dua"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#011F3F"
        android:fontFamily="@font/artifika"
        android:text="Dua of Ajan/আযানের দোয়া"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="@+id/ajan_ans"
        app:layout_constraintStart_toStartOf="@+id/ajan_ans"
        app:layout_constraintTop_toBottomOf="@+id/ajan_ans" />


</androidx.constraintlayout.widget.ConstraintLayout>