<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Quotes">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/quotes_english"
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="285dp"
        android:backgroundTint="#011F3F"
        android:fontFamily="@font/artifika"
        android:text="English"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:cornerRadius="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/quotes_bangla"
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:layout_marginStart="30dp"
        android:backgroundTint="#011F3F"
        android:fontFamily="@font/artifika"
        android:text="বাংলা"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/quotes_english"
        app:layout_constraintStart_toEndOf="@+id/quotes_english"
        app:layout_constraintTop_toTopOf="@+id/quotes_english" />

</androidx.constraintlayout.widget.ConstraintLayout>